<h1>Editing usuario</h1>

<% form_for(@usuario) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :nombres %><br />
    <%= f.text_field :nombres %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%if( @isPerfil.nil?)%>

	<%= link_to 'Show', @usuario %>

	<%if( @usuario_sesion.perfil == 'ADMIN')%>
	| <%= link_to 'Back', usuarios_path %>
	<%end%>
	
<%else%>
	<a href="/usuarios/<%=@usuario.id%>?p=1">Back</a>
<%end%>