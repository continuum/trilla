= render(:partial => "shared/adminmenu")
.component-navigator-tabs
  %ul
    %li.tab-select.first
      %a#tab-form{:href => "javascript:void(0)"} Tareas
    %li.clearfix
.component-datatable
  =error_messages_for :tarea, :header_message => "Errores:", :message => ""
  -if @tareas.empty?
    No existen tareas creadas
  -else
    .component-standar-grid
      %table.standar-grid-model{:border => "0", :cellpadding => "0", :cellspacing => "0"}
        %col{:width => ""}/
        %col{:width => ""}/
        %col{:width => "180px"}/
        %tbody
          %tr
            %th Nombre
            %th Tipo
            %th
          - @tareas.each do |tarea|
            %tr{:id => "tr_tarea-#{tarea.id}"}
              %td #{link_to tarea.descripcion, edit_tarea_path(tarea)}
              %td= h tarea.tipo
              %td
                \&nbsp;
                = link_to 'Eliminar', tarea, :confirm => 'EstÃ¡ seguro?', :method => :delete
  %br/
  = link_to 'Crear tarea', new_tarea_path
