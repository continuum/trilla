<%= render(:partial => "shared/header") %>
<h3>Listado de tareas</h3>
<table>
  <tr>
    <th>Descripcion</th>
	<th>Tipo</th>
  </tr>

<% @tareas.each do |tarea| %>
  <tr>
    <td><%=h tarea.descripcion %></td>
	<td><%=h tarea.tipo %></td>
    <td><%= link_to 'Show', tarea %></td>
    <td><%= link_to 'Edit', edit_tarea_path(tarea) %></td>
    <td><%= link_to 'Destroy', tarea, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nueva tarea', new_tarea_path %>